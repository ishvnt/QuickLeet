{
  "manifest_version": 2,
  "name": "QuickLeet",
  "version": "0.1",
  "description": "Generates Boilerplate Code for LeetCode Problems",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "downloads"
  ],
  "background": {
    "scripts": [
      "./background/background.js"
    ],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "LeetCode Boilerplate Generator",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://leetcode.com/problems/*"
      ]
    }
  ]
}